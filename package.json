{
  "name": "cordova",
  "version": "13.0.0-dev",
  "description": "Cordova command line interface tool",
  "main": "cordova",
  "engines": {
    "node": ">=20.5.0"
  },
  "bin": {
    "cordova": "./bin/cordova"
  },
  "scripts": {
    "test": "npm run lint && npm run cover",
    "lint": "eslint . bin/cordova",
    "cover": "nyc jasmine"
  },
  "repository": "github:apache/cordova-cli",
  "bugs": "https://github.com/apache/cordova-cli/issues",
  "keywords": [
    "cordova",
    "client",
    "cli"
  ],
  "dependencies": {
    "configstore": "^5.0.1",
    "cordova-common": "^5.0.1",
    "cordova-create": "^5.0.0",
    "cordova-lib": "^12.0.2",
    "editor": "^1.0.0",
    "execa": "^5.1.1",
    "nopt": "^8.1.0",
    "semver": "^7.5.4",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "@cordova/eslint-config": "^5.1.0",
    "jasmine": "^5.8.0",
    "nyc": "^17.1.0",
    "rewire": "^9.0.0"
  },
  "author": "Apache Software Foundation",
  "license": "Apache-2.0",
  "nyc": {
    "include": [
      "bin/**",
      "src/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
